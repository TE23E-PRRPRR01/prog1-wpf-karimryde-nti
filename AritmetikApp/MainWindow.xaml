<Window x:Class="AritmetikApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AritmetikApp"
        mc:Ignorable="d"
        Title="AritmetikApp" 
        Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel>
        <Label Margin="5">Aritmetiken</Label>
        <Label Margin="5">Tal 1:</Label>
        <TextBox Margin="5" Name="txbTal1"></TextBox>
        <Label Margin="5">Operator (+,-,*,/):</Label>
        <TextBox Margin="5" Name="txbOperator"></TextBox>
        <Label Margin="5">Tal 2:</Label>
        <TextBox Margin="5" Name="txbTal2"></TextBox>
        <Button Margin="5" Click="KlickBeräkna">Beräkna</Button>
        <Label Margin="5" Name="lblResultat"></Label>
    </StackPanel>
</Window>
