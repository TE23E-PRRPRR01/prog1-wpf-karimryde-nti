<Window x:Class="Intro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intro"
        mc:Ignorable="d"
        Title="Mitt första fönsterprogram" Height="450" Width="400" 
        MinHeight="200" MinWidth="200"
        MaxHeight="500" MaxWidth="600"
        SizeToContent="WidthAndHeight"
        Background="#DDD">
    <StackPanel Margin="10">
        <Label Margin="5" FontSize="30" FontWeight="bold">Hej världen!!</Label>
        <StackPanel Orientation="Horizontal">
            <Label Margin="5">Ange namn:</Label>
            <TextBox Margin="5" Width="80"></TextBox>
        </StackPanel>
        <Button Background="red" Foreground="white" FontSize="20" Padding="10">Klicka mig!</Button>
    </StackPanel>
</Window>
