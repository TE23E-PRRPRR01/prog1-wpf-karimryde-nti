<Window x:Class="MelloApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MelloApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MelloYellow"
    Width="800"
    Height="450"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <StackPanel Background="#000">
        <Image Width="200"
            Source="bilder/melodifestivalen.png" />
        <Label Margin="10"
            FontSize="24"
            Foreground="#FFF">Rösta på din favvolåt!</Label>
        <Button Name="röd"
            Margin="10"
            Padding="10"
            Background="Red"
            Click="KlickRösta"
            FontWeight="Bold"
            Foreground="#FFF">Röd</Button>
        <Button Name="blå"
            Margin="10"
            Padding="10"
            Background="Blue"
            Click="KlickRösta"
            FontWeight="Bold"
            Foreground="#FFF">Blå</Button>
        <Button Name="grön"
            Margin="10"
            Padding="10"
            Background="Green"
            Click="KlickRösta"
            FontWeight="Bold"
            Foreground="#FFF">Grön</Button>
        <Label Margin="10"
            Foreground="#FFF">Antal röster</Label>
        <TextBox Name="txbResultat"
            Margin="10"
            Padding="10" />
    </StackPanel>
</Window>